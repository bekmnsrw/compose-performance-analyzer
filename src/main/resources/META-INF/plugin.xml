<idea-plugin>
    <id>compose-performance-analyzer</id>
    <name>Compose-Performance-Analyzer</name>
    <vendor email="ilya.bekmansurov@gmail.com">Ilya Bekmansurov</vendor>
    <description><![CDATA[Performance Analyzer for Android applications using Jetpack Compose]]></description>

    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.kotlin</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!--    annotator    -->
        <annotator
                language="kotlin"
                implementationClass="compose.performance.analyzer.plugin.PluginInitializer"
        />
        <annotator
                language="kotlin"
                implementationClass="compose.performance.analyzer.plugin.RecompositionAnnotator"
        />

        <!--    localInspection    -->
        <localInspection
                language="kotlin"
                displayName="Unoptimized Compose Local Allocation"
                groupName="Kotlin"
                enabledByDefault="true"
                implementationClass="compose.performance.analyzer.dfa.inspection.ComposeLocalAllocationInspection"
                level="WARNING"
        />
        <localInspection
                language="kotlin"
                displayName="Unoptimized Top-Level Allocation"
                groupName="Kotlin"
                enabledByDefault="true"
                implementationClass="compose.performance.analyzer.dfa.inspection.TopLevelAllocationInspection"
                level="WARNING"
        />
    </extensions>
</idea-plugin>
