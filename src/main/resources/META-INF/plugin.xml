<idea-plugin>
    <id>compose-performance-analyzer</id>
    <name>Compose-Performance-Analyzer</name>
    <vendor email="ilya.bekmansurov@gmail.com">Ilya Bekmansurov</vendor>
    <description><![CDATA[Performance Analyzer for Android applications using Jetpack Compose]]></description>

    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.kotlin</depends>

    <extensions defaultExtensionNs="com.intellij">
        <annotator language="kotlin" implementationClass="compose.performance.analyzer.plugin.PluginInitializer"/>
        <annotator language="kotlin" implementationClass="compose.performance.analyzer.plugin.RecompositionAnnotator"/>
    </extensions>
</idea-plugin>
